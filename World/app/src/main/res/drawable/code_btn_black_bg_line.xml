<?xml version= "1.0" encoding= "utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:radius="@dimen/pub_btn_corners" />

            <stroke android:width="1dp" android:color="@color/base_light_text_color" />
            <!-- 背景 -->
            <solid android:color="#e2e1e1" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" android:useLevel="false">
            <corners android:radius="@dimen/pub_btn_corners" />

            <stroke android:width="1dp" android:color="@color/base_disable_text_color" />
            <!-- 背景 -->
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</selector>