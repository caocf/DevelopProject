<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/px_dimen_20">

    <TextView
        android:id="@+id/tv_ad_name"
        style="@style/AppTheme_home_l_title_text_with_left"
        android:text="@string/home_brand" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420px"
        android:layout_marginTop="@dimen/px_dimen_15"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/base_line_dimen"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_line_dimen"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.xhl.world.ui.view.LifeCycleImageView
                    android:id="@+id/iv_brand_first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <View
                    android:layout_width="@dimen/base_line_dimen"
                    android:layout_height="match_parent"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.xhl.world.ui.view.LifeCycleImageView
                        android:id="@+id/iv_brand_sec"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_line_dimen"
                        android:background="@color/line_color" />

                    <com.xhl.world.ui.view.LifeCycleImageView
                        android:id="@+id/iv_brand_thr"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_line_dimen"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72px"
                android:orientation="horizontal">

                <com.xhl.world.ui.view.LifeCycleImageView
                    android:id="@+id/iv_brand_small_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.xhl.world.ui.view.LifeCycleImageView
                    android:id="@+id/iv_brand_small_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.xhl.world.ui.view.LifeCycleImageView
                    android:id="@+id/iv_brand_small_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.xhl.world.ui.view.LifeCycleImageView
                    android:id="@+id/iv_brand_small_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.xhl.world.ui.view.LifeCycleImageView
                    android:id="@+id/iv_brand_small_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_line_dimen"
                android:background="@color/line_color" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/base_line_dimen"
            android:layout_height="match_parent"
            android:background="@color/line_color" />
    </LinearLayout>
</LinearLayout>

