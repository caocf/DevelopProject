<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fl_coupon_state"
        android:layout_width="190px"
        android:layout_height="140px"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_20"
        android:background="@drawable/icon_coupon_nor">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_coupon_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="@color/app_while"
                android:textSize="48px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="å…ƒ"
                android:textColor="@color/app_while"
                android:textSize="@dimen/px_text_26" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginRight="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_20"
        android:background="@drawable/icon_coupon_bg"
        android:paddingLeft="@dimen/px_dimen_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coupon_use_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_dark_text_color"
                android:textSize="@dimen/px_text_32" />

            <TextView
                android:id="@+id/tv_coupon_use_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_dimen_4"
                android:textColor="@color/base_light_text_color"
                android:textSize="@dimen/px_text_24" />

            <TextView
                android:id="@+id/tv_coupon_use_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_dimen_4"
                android:textColor="@color/base_light_text_color"
                android:textSize="@dimen/px_text_24" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>