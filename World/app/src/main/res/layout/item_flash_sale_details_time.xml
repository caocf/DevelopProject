<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/item_flash_sale_details_time_width"
        android:layout_height="@dimen/item_flash_sale_details_time_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_flash_sale_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_22" />

        <TextView
            android:id="@+id/tv_flash_sale_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_dimen_4"
            android:textColor="@color/white"
            android:textSize="@dimen/px_text_22" />
    </LinearLayout>
</RelativeLayout>