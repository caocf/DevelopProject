<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_while"
    android:orientation="vertical"
    android:paddingBottom="@dimen/pub_dimen_16dp"
    android:paddingLeft="@dimen/pub_dimen_16dp"
    android:paddingRight="@dimen/pub_dimen_16dp"
    android:paddingTop="@dimen/pub_dimen_16dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_dialog_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:inputType="text"
            android:textColor="@color/base_dark_text_color"
            android:textColorHint="@color/base_light_text_color"
            android:textSize="@dimen/pub_text_16sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_dialog_input_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="QQ"
            android:inputType="number"
            android:textColor="@color/base_dark_text_color"
            android:textColorHint="@color/base_light_text_color"
            android:textSize="@dimen/pub_text_16sp" />

    </android.support.design.widget.TextInputLayout>


</LinearLayout>