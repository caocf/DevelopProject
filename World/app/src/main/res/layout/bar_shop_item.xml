<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/px_dimen_20"
    android:background="@color/app_while"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ripple_view_shop"
            style="@style/style_base_ripple"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:paddingRight="@dimen/px_dimen_20">

            <CheckBox
                android:id="@+id/rb_parent_check_all"
                style="@style/shopping_style_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <com.xhl.world.ui.view.LifeCycleImageView
                android:id="@+id/iv_shop_icon"
                android:layout_width="60px"
                android:layout_height="42px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rb_parent_check_all" />

            <TextView
                android:id="@+id/tv_shop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_dimen_8"
                android:layout_toRightOf="@+id/iv_shop_icon"
                android:textColor="@color/app_dark_grey"
                android:textSize="@dimen/px_text_24" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_dimen"
            android:background="@color/line_color" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="94px"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_dimen_30"
            android:paddingRight="@dimen/px_dimen_30"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_goods_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/shop_goods_count"
                android:textColor="@color/app_red"
                android:textSize="@dimen/px_dimen_24" />

            <View
                android:layout_width="@dimen/base_line_dimen"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/px_dimen_20"
                android:layout_marginTop="@dimen/px_dimen_20"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/tv_goods_postal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/app_dark_grey"
                android:textSize="@dimen/px_dimen_24" />

            <TextView
                android:id="@+id/tv_goods_revenue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/app_dark_grey"
                android:textSize="@dimen/px_dimen_24"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</android.support.v7.widget.CardView>