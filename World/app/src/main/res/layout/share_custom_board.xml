<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:text="分享"
        android:textSize="16sp" />

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layoutAnimation="@anim/share_layout_anim_top"
        android:orientation="horizontal">

        <LinearLayout style="@style/share_item_parent">

            <ImageButton
                android:id="@+id/wechat"
                style="@style/share_button"
                android:background="@drawable/share_wechat" />

            <TextView
                style="@style/share_button_tv"
                android:text="微信" />
        </LinearLayout>

        <LinearLayout style="@style/share_item_parent">

            <ImageButton
                android:id="@+id/wechat_circle"
                style="@style/share_button"
                android:background="@drawable/share_wechat_circle" />

            <TextView
                style="@style/share_button_tv"
                android:text="朋友圈" />
        </LinearLayout>

        <LinearLayout
            style="@style/share_item_parent"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/sina"
                style="@style/share_button"
                android:background="@drawable/share_sina" />

            <TextView
                style="@style/share_button_tv"
                android:text="新浪微博" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layoutAnimation="@anim/share_layout_anim_bottom"
        android:orientation="horizontal">

        <LinearLayout style="@style/share_item_parent">

            <ImageButton
                android:id="@+id/qq"
                style="@style/share_button"
                android:background="@drawable/share_qq" />

            <TextView
                style="@style/share_button_tv"
                android:text="QQ" />
        </LinearLayout>

        <LinearLayout style="@style/share_item_parent">

            <ImageButton
                android:id="@+id/qzone"
                style="@style/share_button"
                android:background="@drawable/share_qzone" />

            <TextView
                style="@style/share_button_tv"
                android:text="QQ空间" />
        </LinearLayout>

        <LinearLayout
            style="@style/share_item_parent"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/more"
                style="@style/share_button"
                android:background="@drawable/share_more" />

            <TextView
                style="@style/share_button_tv"
                android:text="更多" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>