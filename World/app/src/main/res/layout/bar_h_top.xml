<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pub_top_bar_height"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <com.xhl.xhl_library.ui.view.RippleView
        android:id="@+id/ripple_bar_home_top_scan"
        android:layout_width="120px"
        style="@style/AppTheme_home_top_btn">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_left_text"
                style="@style/AppTheme_home_top_btn_text"
                android:text="南京"
                android:textColor="@color/app_home_text"
                android:textSize="@dimen/px_text_30" />


            <ImageView
                android:id="@+id/input_left_icon"
                android:layout_width="wrap_content"
                android:layout_marginLeft="3px"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_down"
                android:tint="@color/app_home_text" />

        </LinearLayout>
    </com.xhl.xhl_library.ui.view.RippleView>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_app"
            android:tint="@color/red" />

    </FrameLayout>


    <com.xhl.xhl_library.ui.view.RippleView
        android:id="@+id/ripple_bar_home_top_search"
        style="@style/AppTheme_home_top_btn"
        android:clickable="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/input_right_icon"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/icon_search" />

        </LinearLayout>


    </com.xhl.xhl_library.ui.view.RippleView>

</LinearLayout>