<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_while"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bar_classify_title"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginLeft="0dp"
        android:gravity="center_vertical"
        android:background="@color/app_light_grey"
        style="@style/AppTheme_classify_details_title_text" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bar_classify_recycler_view"
        style="@style/style_base_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_dimen_20"
        android:overScrollMode="never" />

</LinearLayout>

