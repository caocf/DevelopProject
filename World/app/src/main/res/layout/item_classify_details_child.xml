<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <com.xhl.world.ui.view.LifeCycleImageView
        android:id="@+id/iv_classify_item_child_image"
        android:layout_width="100px"
        android:layout_height="100px"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_net_error_show4" />

    <TextView
        android:id="@+id/tv_classify_item_child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="6px"
        android:lines="1"
        android:ellipsize="none"
        android:textColor="@color/base_light_text_color"
        android:textSize="@dimen/px_text_18" />
</LinearLayout>