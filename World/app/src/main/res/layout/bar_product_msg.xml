<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_while"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_yf"
            android:textColor="#9b9b9b"
            android:textSize="@dimen/px_text_26" />

        <TextView
            android:id="@+id/tv_product_yf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包邮"
            android:textColor="#595959"
            android:textSize="@dimen/px_text_26" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_service"
            android:textColor="#9b9b9b"
            android:textSize="@dimen/px_text_26" />

        <TextView
            android:id="@+id/tv_product_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家承诺48小时发货"
            android:textColor="#595959"
            android:textSize="@dimen/px_text_26" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_pay_type"
            android:textColor="#9b9b9b"
            android:textSize="@dimen/px_text_26" />

        <TextView
            android:id="@+id/tv_product_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线支付"
            android:textColor="#595959"
            android:textSize="@dimen/px_text_26" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_dimen_20"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_product_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/product_tip"
            android:textColor="#9b9b9b"
            android:textSize="@dimen/px_text_26" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_dimen_20"
            android:scaleType="fitXY"
            android:src="@drawable/icon_dialog_tip" />

    </LinearLayout>


</LinearLayout>