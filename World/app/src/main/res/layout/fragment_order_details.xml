<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <View style="@style/style_base_ver_line" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/bar_order_location" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/px_dimen_20"
                android:background="@color/app_while"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_dimen_20"
                    android:layout_marginRight="@dimen/px_dimen_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_info_id"
                        android:textColor="@color/base_light_text_color"
                        android:textSize="@dimen/px_text_26" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_order_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/px_text_26" />

                </LinearLayout>

                <View style="@style/style_base_ver_line" />

                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical" />
            </LinearLayout>

            <include layout="@layout/bar_order_total_fee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_while"
                android:orientation="vertical">

                <View style="@style/style_base_ver_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:layout_marginLeft="@dimen/px_dimen_20"
                    android:gravity="center"
                    android:text="@string/order_info"
                    android:textSize="@dimen/px_text_24" />

                <View
                    style="@style/style_base_ver_line"
                    android:layout_marginLeft="@dimen/px_dimen_20" />

                <TextView
                    android:id="@+id/tv_order_info_time_xd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_dimen_20"
                    android:layout_marginTop="@dimen/px_dimen_20"
                    android:gravity="center"
                    android:text="@string/order_info_time_xd"
                    android:textSize="@dimen/px_text_24" />

                <TextView
                    android:id="@+id/tv_order_info_time_fk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_dimen_20"
                    android:layout_marginTop="@dimen/px_dimen_20"
                    android:gravity="center"
                    android:text="@string/order_info_time_fk"
                    android:textSize="@dimen/px_text_24" />

                <TextView
                    android:id="@+id/tv_order_info_time_fh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px_dimen_20"
                    android:layout_marginLeft="@dimen/px_dimen_20"
                    android:layout_marginTop="@dimen/px_dimen_20"
                    android:gravity="center"
                    android:text="@string/order_info_time_fh"
                    android:textSize="@dimen/px_text_24" />

                <View style="@style/style_base_ver_line" />

                <LinearLayout
                    android:id="@+id/ll_action"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_1"
                        android:layout_width="140px"
                        android:layout_height="50px"
                        android:layout_marginRight="@dimen/px_dimen_24"
                        android:background="@drawable/code_btn_black_bg_line"
                        android:text="@string/app_name"
                        android:textColor="@color/base_dark_text_color"
                        android:textSize="@dimen/px_text_26" />

                    <Button
                        android:id="@+id/button_2"
                        android:layout_width="140px"
                        android:layout_height="50px"
                        android:layout_marginRight="@dimen/px_dimen_24"
                        android:background="@drawable/code_btn_black_bg_line"
                        android:text="@string/app_name"
                        android:textColor="@color/base_dark_text_color"
                        android:textSize="@dimen/px_text_26" />

                    <Button
                        android:id="@+id/button_3"
                        android:layout_width="140px"
                        android:layout_height="50px"
                        android:layout_marginRight="@dimen/px_dimen_30"
                        android:background="@drawable/code_btn_red_bg"
                        android:text="@string/app_name"
                        android:textColor="@color/app_while"
                        android:textSize="@dimen/px_text_26" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>