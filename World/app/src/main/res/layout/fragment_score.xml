<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include layout="@layout/title_with_button" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="204px"
        android:background="@drawable/icon_score_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_while"
                android:textSize="56px"
                android:textStyle="bold"
                android:text="0"
                android:typeface="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:text="积分"
                android:textColor="@color/app_while"
                android:textSize="@dimen/px_text_32" />

        </LinearLayout>
    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_dimen_30"
        android:layout_marginTop="@dimen/px_text_26"
        android:text="积分说明"
        android:textColor="@color/base_light_text_color"
        android:textSize="@dimen/px_text_26" />

    <TextView
        android:id="@+id/tv_score_explain"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/px_dimen_30"
        android:layout_marginRight="@dimen/px_dimen_30"
        android:layout_marginTop="@dimen/px_dimen_20"
        android:layout_height="wrap_content"
        android:text="@string/score_explain"
        android:textColor="@color/base_light_text_color"
        android:textSize="@dimen/px_text_24" />


</LinearLayout>