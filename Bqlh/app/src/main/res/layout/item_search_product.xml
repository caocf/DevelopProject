<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="230px"
    android:background="@color/app_while"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_product_image"
        style="@style/base_product_image"
        android:layout_marginStart="@dimen/px_dimen_20"
        android:layout_marginLeft="@dimen/px_dimen_20" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_product_image"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginRight="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_8"
        android:layout_toRightOf="@+id/iv_product_image"
        android:layout_toEndOf="@+id/iv_product_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_dark_color"
        android:textSize="@dimen/px_dimen_24" />

    <TextView
        android:id="@+id/tv_product_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_name"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginRight="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_4"
        android:layout_toRightOf="@+id/iv_product_image"
        android:layout_toEndOf="@+id/iv_product_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/app_red"
        android:textSize="@dimen/px_dimen_18" />


    <TextView
        android:id="@+id/tv_product_b_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_product_s_price"
        android:layout_alignLeft="@+id/tv_product_s_price"
        android:layout_alignStart="@+id/tv_product_s_price"
        android:layout_marginBottom="@dimen/px_dimen_4"
        android:textColor="@color/app_price_color"
        android:textSize="@dimen/px_dimen_22" />

    <TextView
        android:id="@+id/tv_product_s_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_product_image"
        android:layout_marginBottom="@dimen/px_dimen_4"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginRight="@dimen/px_dimen_20"
        android:layout_toRightOf="@+id/iv_product_image"
        android:layout_toEndOf="@+id/iv_product_image"
        android:textColor="@color/text_light_color"
        android:textSize="@dimen/px_dimen_22" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_dimen_58"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/px_dimen_20"
        android:layout_marginRight="@dimen/px_dimen_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_reduce"
            style="@style/style_pro_reduce" />

        <TextView
            android:id="@+id/tv_product_numb"
            style="@style/style_pro_input" />

        <ImageView
            android:id="@+id/btn_add"
            style="@style/style_pro_add" />

    </LinearLayout>

    <View
        style="@style/line_hor"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/px_dimen_20" />

</RelativeLayout>