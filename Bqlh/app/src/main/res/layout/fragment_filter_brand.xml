<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_dimen_72"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_dimen_20"
            android:paddingRight="@dimen/px_dimen_20"
            android:text="全部品牌"
            android:textColor="@color/text_dark_color"
            android:textSize="@dimen/px_dimen_26" />

        <View style="@style/line_hor" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_filter"
            style="@style/base_recycle_view"
            android:overScrollMode="never" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_brand_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="暂无相关数据" />
</com.zhy.autolayout.AutoFrameLayout>