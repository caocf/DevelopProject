<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/translate_50"
    android:orientation="horizontal">

    <com.xhl.bqlh.view.custom.MultiCheckBox
        android:id="@+id/btn_op_1"
        style="@style/style_multi_check_box"
        android:clickable="true"
        app:drawableRes="@drawable/icon_p_shop"
        app:textRes="店铺" />

    <com.xhl.bqlh.view.custom.MultiCheckBox
        android:id="@+id/btn_op_2"
        style="@style/style_multi_check_box"
        android:clickable="true"
        app:drawableRes="@drawable/icon_p_collection"
        app:textRes="@string/product_op_add_collection" />

    <com.xhl.bqlh.view.custom.MultiCheckBox
        android:id="@+id/btn_op_3"
        style="@style/style_multi_check_box"
        android:clickable="true"
        app:drawableRes="@drawable/icon_p_car"
        app:textRes="@string/main_shopping" />

    <Button
        android:id="@+id/btn_op_4"
        android:layout_width="190px"
        android:layout_height="match_parent"
        android:background="@drawable/code_rectangle_red"
        android:gravity="center"
        android:text="@string/product_op_add"
        android:textColor="@color/app_while"
        android:textSize="@dimen/px_dimen_26" />

</com.zhy.autolayout.AutoLinearLayout>