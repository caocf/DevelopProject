<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xhl.bqlh.view.custom.RoundedImageView
        android:id="@+id/iv_product_image"
        style="@style/base_product_image"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_20"
        android:layout_marginStart="@dimen/px_dimen_20" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_product_image"
        android:layout_marginEnd="@dimen/px_dimen_20"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginRight="@dimen/px_dimen_20"
        android:layout_marginStart="@dimen/px_dimen_20"
        android:layout_toEndOf="@+id/iv_product_image"
        android:layout_toRightOf="@+id/iv_product_image"
        android:textColor="@color/text_dark_color"
        android:textSize="@dimen/px_dimen_22" />

    <TextView
        android:id="@+id/tv_product_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_name"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginRight="@dimen/px_dimen_20"
        android:layout_marginStart="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_4"
        android:layout_toRightOf="@+id/iv_product_image"
        android:textColor="@color/app_red"
        android:textSize="@dimen/px_dimen_20" />

    <TextView
        android:id="@+id/tv_product_active_give"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_active"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginRight="@dimen/px_dimen_20"
        android:layout_marginStart="@dimen/px_dimen_20"
        android:layout_marginTop="@dimen/px_dimen_4"
        android:layout_toRightOf="@+id/iv_product_image"
        android:textColor="@color/app_red"
        android:textSize="@dimen/px_dimen_20" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_product_image"
        android:layout_marginEnd="@dimen/px_dimen_20"
        android:layout_marginLeft="@dimen/px_dimen_20"
        android:layout_marginRight="@dimen/px_dimen_20"
        android:layout_marginStart="@dimen/px_dimen_20"
        android:layout_toEndOf="@+id/iv_product_image"
        android:layout_toRightOf="@+id/iv_product_image"
        android:textColor="@color/app_price_color"
        android:textSize="@dimen/px_dimen_26" />

    <TextView
        android:id="@+id/tv_product_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_product_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/px_dimen_20"
        android:layout_marginRight="@dimen/px_dimen_20"
        android:textColor="@color/app_price_color"
        android:textSize="@dimen/px_dimen_26" />
</merge>