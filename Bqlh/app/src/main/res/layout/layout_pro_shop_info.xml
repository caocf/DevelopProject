<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/px_dimen_20">

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark_color"
        android:textSize="@dimen/px_dimen_30" />

    <TextView
        android:id="@+id/tv_shop_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/text_light_color"
        android:textSize="@dimen/px_dimen_26" />


    <TextView
        android:id="@+id/tv_shop_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_name"
        android:layout_marginTop="@dimen/px_dimen_30"
        android:textSize="@dimen/px_dimen_24" />

    <TextView
        android:id="@+id/tv_shop_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_user_name"
        android:layout_marginTop="@dimen/px_dimen_16"
        android:autoLink="phone"
        android:textSize="@dimen/px_dimen_24" />

    <TextView
        android:id="@+id/tv_shop_user_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_user_phone"
        android:layout_marginTop="@dimen/px_dimen_16"
        android:textSize="@dimen/px_dimen_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_user_area"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_dimen_34"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/code_product_details_btn"
            android:clickable="true"
            android:paddingBottom="@dimen/px_dimen_12"
            android:paddingLeft="@dimen/px_dimen_34"
            android:paddingRight="@dimen/px_dimen_34"
            android:paddingTop="@dimen/px_dimen_12"
            android:text="收藏店铺"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/px_dimen_28" />

        <TextView
            android:id="@+id/tv_shop_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginStart="60px"
            android:background="@drawable/code_product_details_btn"
            android:clickable="true"
            android:paddingBottom="@dimen/px_dimen_12"
            android:paddingLeft="@dimen/px_dimen_34"
            android:paddingRight="@dimen/px_dimen_34"
            android:paddingTop="@dimen/px_dimen_12"
            android:text="进入店铺"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/px_dimen_28" />

    </LinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>