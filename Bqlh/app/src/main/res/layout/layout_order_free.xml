<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/px_dimen_20"
    android:background="@color/app_while"
    android:orientation="vertical"
    android:paddingBottom="@dimen/px_dimen_20"
    android:paddingLeft="@dimen/px_dimen_20"
    android:paddingRight="@dimen/px_dimen_20"
    android:paddingTop="@dimen/px_dimen_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_price"
            android:textColor="@color/text_dark_color"
            android:textSize="@dimen/px_dimen_26" />

        <TextView
            android:id="@+id/tv_price_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/app_price_color"
            android:textSize="@dimen/px_dimen_26" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22px"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_integral"
            android:textColor="@color/text_dark_color"
            android:textSize="@dimen/px_dimen_26" />

        <TextView
            android:id="@+id/tv_price_order_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/app_price_color"
            android:textSize="@dimen/px_dimen_26" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_order_real_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22px"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_price_real_pay"
            android:textColor="@color/text_dark_color"
            android:textSize="@dimen/px_dimen_26" />

        <TextView
            android:id="@+id/tv_price_real_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/app_price_color"
            android:textSize="@dimen/px_dimen_26" />

    </RelativeLayout>

</LinearLayout>