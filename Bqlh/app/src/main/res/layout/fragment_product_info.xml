<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_while"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="530px">

            <android.support.v4.view.ViewPager
                android:id="@+id/goods_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/fl_goods_image_num"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="70px"
                android:layout_marginRight="20px"
                android:background="@drawable/code_oval_grey"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_num_cur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/app_while"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2px"
                        android:layout_marginRight="2px"
                        android:text="/"
                        android:textColor="@color/app_while"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/tv_num_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textColor="@color/app_while"
                        android:textSize="26px" />

                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_dimen_20"
            android:text="@string/app_name"
            android:textColor="@color/text_dark_color"
            android:textSize="@dimen/px_dimen_26" />

        <TextView
            android:id="@+id/tv_active_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_dimen_20"
            android:paddingRight="@dimen/px_dimen_20"
            android:text="@string/app_name"
            android:textColor="@color/app_red"
            android:textSize="@dimen/px_dimen_22" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_margin="@dimen/px_dimen_20"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_login_price_content"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/app_red1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="批发价"
                        android:textColor="@color/app_while"
                        android:textSize="@dimen/px_dimen_22" />

                    <TextView
                        android:id="@+id/tv_price_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_dimen_20"
                        android:textColor="@color/app_while"
                        android:textSize="@dimen/px_dimen_30" />

                </LinearLayout>

                <View
                    style="@style/line_ver"
                    android:layout_marginBottom="@dimen/px_dimen_34"
                    android:layout_marginTop="@dimen/px_dimen_34" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最小起订量"
                        android:textColor="@color/app_while"
                        android:textSize="@dimen/px_dimen_22" />

                    <TextView
                        android:id="@+id/tv_min_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_dimen_20"
                        android:textColor="@color/app_while"
                        android:textSize="@dimen/px_dimen_30" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:background="@color/app_red2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建议零售价"
                    android:textColor="@color/app_while"
                    android:textSize="@dimen/px_dimen_22" />

                <TextView
                    android:id="@+id/tv_price_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_dimen_20"
                    android:textColor="@color/app_while"
                    android:textSize="@dimen/px_dimen_30" />

            </LinearLayout>


        </LinearLayout>

        <View style="@style/line_hor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px_dimen_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_dimen_20"
                android:layout_marginTop="@dimen/px_dimen_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_yf"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/px_dimen_26" />

                <TextView
                    android:id="@+id/tv_product_yf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_yf_hint"
                    android:textColor="@color/text_dark_color"
                    android:textSize="@dimen/px_dimen_26" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_dimen_20"
                android:layout_marginTop="@dimen/px_dimen_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_service"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/px_dimen_26" />

                <TextView
                    android:id="@+id/tv_product_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_service_hint"
                    android:textColor="@color/text_dark_color"
                    android:textSize="@dimen/px_dimen_26" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_dimen_20"
                android:layout_marginTop="@dimen/px_dimen_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_pay_type"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/px_dimen_26" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:src="@drawable/icon_pay_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线支付"
                    android:textColor="@color/text_dark_color"
                    android:textSize="@dimen/px_dimen_26" />

                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_marginLeft="@dimen/px_dimen_20"
                    android:src="@drawable/icon_pay_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货到付款"
                    android:textColor="@color/text_dark_color"
                    android:textSize="@dimen/px_dimen_26" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_dimen_20"
            android:background="@color/app_background" />

        <include layout="@layout/layout_pro_shop_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_dimen_20"
            android:background="@color/app_background" />

        <include layout="@layout/layout_pro_hint" />
    </LinearLayout>
</ScrollView>