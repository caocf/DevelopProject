<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--按钮控件基本样式-->
        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>
        <item name="checkboxStyle">@style/Widget.AppCompat.CompoundButton.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
        <item name="switchStyle">@style/Widget.AppCompat.CompoundButton.Switch</item>
        <item name="ratingBarStyle">@style/Widget.AppCompat.RatingBar</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <!-- 主题色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 主题深色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 强调色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--背景颜色null减少一次绘制-->
        <item name="android:windowBackground">@null</item>

    </style>

    <style name="base_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/app_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="base_TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">34px</item>
    </style>

    <style name="base_bg_ripple_oval">
        <item name="android:background">@color/app_while</item>
    </style>

    <style name="base_bg_ripple_rectangle">
        <item name="android:background">@color/app_while</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80px</item>
    </style>

    <style name="base_bg_ripple_rectangle_translate">
        <item name="android:background">@drawable/code_ripple_rec_translate</item>
    </style>

    <style name="base_ripple_button">
        <item name="android:background">@drawable/code_btn_default</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pub_button_height</item>
        <item name="android:textColor">@color/app_while</item>
        <item name="android:textSize">@dimen/px_dimen_26</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="base_swipe_refresh">
        <item name="android:id">@id/swipe_refresh_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="base_recycle_view">
        <item name="android:id">@id/recycler_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
    </style>

    <style name="base_recycle_view.paddingTop">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">@dimen/px_dimen_20</item>
    </style>

    <style name="base_edit_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70px</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:paddingLeft">16px</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/px_dimen_24</item>
        <item name="android:textColor">@color/text_dark_color</item>
        <item name="android:textColorHint">@color/text_light_color</item>
        <item name="android:hint">@string/bar_input_hint</item>
    </style>

    <style name="line_hor">
        <item name="android:background">@color/deliver_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.2px</item>
    </style>

    <style name="line_ver">
        <item name="android:background">@color/deliver_line</item>
        <item name="android:layout_width">1.2px</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="style_multi_check_box">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="checkColor">@color/main_check_color_select</item>
    </style>


    <style name="title_button">
        <item name="android:background">@drawable/code_ripple_rec_translate</item>
        <item name="android:layout_width">@dimen/pub_button_width</item>
        <item name="android:layout_height">@dimen/pub_button_height</item>
        <item name="android:id">@id/fl_back</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="title_button_image">
        <item name="android:layout_width">19px</item>
        <item name="android:layout_height">35px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/app_while</item>
        <item name="android:src">@drawable/icon_back</item>
    </style>

    <style name="title_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_while</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/px_dimen_16</item>
        <item name="android:layout_marginTop">@dimen/px_dimen_4</item>
    </style>

    <style name="title_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pub_title_height</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--滚动到顶部-->
    <style name="style_scroll_top">
        <item name="android:id">@id/iv_scroll_top</item>
        <item name="android:layout_width">@dimen/pub_button_width</item>
        <item name="android:layout_height">@dimen/pub_button_height</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/icon_scroll_top</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
    </style>


    <!--我的-->
    <style name="AppTheme_my_grey_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/px_dimen_26</item>
        <item name="android:layout_marginTop">@dimen/px_dimen_8</item>
        <item name="android:textColor">@color/text_light_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="base_num_hint_text">
        <item name="android:layout_width">28px</item>
        <item name="android:layout_height">28px</item>
        <item name="android:background">@drawable/code_num_hint</item>
        <item name="android:textSize">@dimen/px_dimen_12</item>
        <item name="android:textColor">@color/app_while</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="base_arrow_image">
        <item name="android:layout_width">10px</item>
        <item name="android:layout_height">20px</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/icon_right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!--统一网络异常显示-->
    <style name="base_network_error">
        <item name="android:id">@id/vb_network_error</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout">@layout/layout_network_error</item>
    </style>

    <style name="style_null_hint_text">
        <item name="android:id">@id/tv_text_null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <!--商品图片样式-->
    <style name="base_product_image">
        <item name="android:layout_width">170px</item>
        <item name="android:layout_height">170px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/icon_net_error_show</item>
        <item name="border_width">1dp</item>
        <item name="border_color">@color/app_light_grey</item>
        <item name="corner_radius">@dimen/card_corners_radius</item>
    </style>

    <style name="style_pro_add">
        <item name="android:layout_width">@dimen/px_dimen_58</item>
        <item name="android:layout_height">@dimen/px_dimen_58</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/icon_pro_add</item>
    </style>

    <style name="style_pro_reduce">
        <item name="android:layout_width">@dimen/px_dimen_58</item>
        <item name="android:layout_height">@dimen/px_dimen_58</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/icon_pro_reduce</item>
    </style>

    <style name="style_pro_input">
        <item name="android:layout_width">80px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/px_dimen_22</item>
        <item name="android:text">0</item>
    </style>

    <style name="style_pro_sku_hint">
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textColor">@color/text_dark_color</item>
        <item name="android:textSize">@dimen/px_dimen_26</item>
    </style>

    <style name="style_pro_sku_hint_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:textColor">@color/text_light_color</item>
        <item name="android:textSize">@dimen/px_dimen_26</item>
    </style>

    <style name="shopping_style_check_box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">@dimen/px_dimen_26</item>
        <item name="android:textColor">@color/text_dark_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginRight">@dimen/px_dimen_20</item>
        <item name="android:layout_marginLeft">@dimen/px_dimen_20</item>
    </style>

    <style name="order_op_button">
        <item name="android:layout_width">140px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:layout_marginTop">25px</item>
        <item name="android:layout_marginBottom">25px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/code_order_btn</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/px_dimen_26</item>
        <item name="android:textColor">@color/app_order_btn</item>
    </style>

    <style name="order_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:textSize">@dimen/px_dimen_24</item>
        <item name="android:textColor">#a0000000</item>
    </style>


    <style name="user_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/px_dimen_28</item>
        <item name="android:textColor">@color/text_dark_color</item>
    </style>

    <style name="user_info_text_msg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/px_dimen_24</item>
        <item name="android:textColor">@color/text_light_color</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/px_dimen_20</item>
    </style>

    <style name="user_face">
        <item name="android:layout_width">124px</item>
        <item name="android:layout_height">124px</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/icon_my_avatar_no</item>
        <item name="border_color">@color/app_light_grey</item>
        <item name="border_width">2dp</item>
        <item name="corner_radius">45dp</item>
    </style>

</resources>
