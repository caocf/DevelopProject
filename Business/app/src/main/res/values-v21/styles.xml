<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="style_ripple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_recatngle_while_color</item>
    </style>


    <style name="style_base_ripple">
        <!--关闭自带Ripple效果-->
        <item name="rv_need_show">false</item>
        <item name="android:background">@drawable/ripple_recatngle_while_color</item>
    </style>

    <style name="style_ripple_button" parent="style_base_ripple">
        <item name="android:background">@drawable/ripple_rectangle_accent_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>