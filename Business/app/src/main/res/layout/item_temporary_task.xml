<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/style_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pub_dimen_8dp"
        android:paddingLeft="@dimen/pub_dimen_16dp"
        android:paddingRight="@dimen/pub_dimen_16dp"
        android:paddingTop="@dimen/pub_dimen_8dp">

        <TextView
            android:id="@+id/tv_task_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/base_dark_text_color"
            android:textSize="@dimen/pub_text_16sp" />

        <TextView
            android:id="@+id/tv_task_shop_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_task_shop_name"
            android:layout_marginLeft="@dimen/pub_dimen_8dp"
            android:layout_marginStart="@dimen/pub_dimen_8dp"
            android:layout_toEndOf="@+id/tv_task_shop_name"
            android:layout_toRightOf="@+id/tv_task_shop_name"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/pub_text_14sp" />


        <TextView
            android:id="@+id/tv_task_shop_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_task_shop_name"
            android:layout_marginTop="6dp"
            android:text="地址:刷岭路43"
            android:textColor="@color/base_light_text_color"
            android:textSize="@dimen/pub_text_14sp" />

        <CheckBox
            android:id="@+id/cb_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:duplicateParentState="true" />

    </RelativeLayout>

    <include layout="@layout/pub_line_hor" />
</LinearLayout>