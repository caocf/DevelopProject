<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include layout="@layout/pub_app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@color/app_while"
        android:clickable="true"
        android:fitsSystemWindows="false"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/nva_filter_sub_text"
                android:text="@string/order_search_start_time" />

            <TextView
                android:id="@+id/tv_start_time"
                style="@style/nva_filter_sub_text_content" />

            <ImageView
                style="@style/arrow_right"
                android:layout_marginRight="@dimen/pub_dimen_16dp" />


        </LinearLayout>

        <include layout="@layout/pub_line_hor" />

        <LinearLayout
            android:id="@+id/ll_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/nva_filter_sub_text"
                android:text="@string/order_search_end_time" />

            <TextView
                android:id="@+id/tv_end_time"
                style="@style/nva_filter_sub_text_content" />

            <ImageView
                style="@style/arrow_right"
                android:layout_marginRight="@dimen/pub_dimen_16dp" />


        </LinearLayout>

        <include layout="@layout/pub_line_hor" />

        <Button
            android:id="@+id/btn_query"
            style="@style/button_default"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/pub_dimen_16dp" />

    </LinearLayout>

</LinearLayout>