<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pub_dimen_8dp"
        android:layout_marginLeft="@dimen/pub_dimen_16dp"
        android:layout_marginRight="@dimen/pub_dimen_16dp"
        android:layout_marginTop="@dimen/pub_dimen_8dp"
        app:cardCornerRadius="@dimen/card_corners_radius"
        app:cardElevation="@dimen/card_elevation">


        <RelativeLayout
            android:id="@+id/rl_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/code_store_apply_state_1"
            android:paddingBottom="@dimen/pub_dimen_8dp"
            android:paddingLeft="@dimen/pub_dimen_16dp"
            android:paddingRight="@dimen/pub_dimen_16dp"
            android:paddingTop="@dimen/pub_dimen_16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_apply_time_hint"
                android:layout_marginTop="@dimen/pub_dimen_8dp"
                android:src="@drawable/ic_store" />

            <TextView
                android:id="@+id/tv_apply_time_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/pub_dimen_8dp"
                android:layout_marginStart="@dimen/pub_dimen_8dp"
                android:text="2016-02-12 15:32"
                android:textColor="@color/app_while"
                android:textSize="@dimen/pub_text_18sp" />

            <TextView
                android:id="@+id/tv_apply_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_apply_time_hint"
                android:layout_marginTop="18dp"
                android:textColor="@color/app_while" />

            <View
                android:id="@+id/line"
                style="@style/line_hor"
                android:layout_below="@+id/tv_apply_money"
                android:layout_marginTop="@dimen/pub_dimen_8dp"
                android:background="#70ffffff" />

            <TextView
                android:id="@+id/tv_apply_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginTop="@dimen/pub_dimen_8dp"
                android:text="当前状态:可修改"
                android:textColor="@color/app_while"
                android:textSize="@dimen/pub_text_14sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>