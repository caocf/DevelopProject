<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_dimen_56dp"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pub_dimen_8dp"
            android:background="@color/app_while"
            app:cardCornerRadius="@dimen/card_corners_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="@dimen/pub_dimen_56dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_back" />

                <EditText
                    android:id="@+id/ed_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/pub_dimen_8dp"
                    android:background="@color/transparent"
                    android:hint="@string/menu_search_hint"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:textColor="@color/base_dark_text_color"
                    android:textColorHint="@color/base_disable_text_color" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="@color/app_orange" />

    <android.support.v4.view.ViewPager
        android:id="@id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
