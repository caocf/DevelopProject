<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_while"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pub_dimen_8dp"
        android:paddingLeft="@dimen/pub_dimen_16dp"
        android:paddingTop="@dimen/pub_dimen_8dp">

        <TextView
            android:id="@+id/tv_product_name"
            style="@style/style_order_head_text"
            android:layout_marginLeft="@dimen/pub_dimen_8dp"
            android:lines="1"
            android:text="@string/app_name"
            android:textSize="@dimen/pub_text_14sp" />

        <TextView
            android:id="@+id/tv_product_numb"
            style="@style/style_order_subhead_text"
            android:layout_below="@+id/tv_product_name"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/pub_dimen_8dp"
            android:text="数量:5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_product_numb"
            android:gravity="center_vertical"
            android:minWidth="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_price1" />

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_orange" />
        </LinearLayout>


    </RelativeLayout>

    <include layout="@layout/pub_line_hor" />
</LinearLayout>