<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_while"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_product_name"
        style="@style/style_order_head_text"
        android:layout_marginLeft="@dimen/pub_dimen_16dp"
        android:layout_marginRight="@dimen/pub_dimen_16dp"
        android:layout_marginTop="@dimen/pub_dimen_4dp"
        android:lines="1"
        android:textSize="@dimen/pub_text_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pub_dimen_4dp"
        android:layout_marginLeft="@dimen/pub_dimen_16dp"
        android:layout_marginRight="@dimen/pub_dimen_16dp"
        android:layout_marginTop="@dimen/pub_dimen_4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_product_origin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_light_text_color"
            android:textSize="@dimen/pub_text_13sp" />

        <TextView
            android:id="@+id/tv_product_discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pub_dimen_8dp"
            android:layout_marginStart="@dimen/pub_dimen_8dp"
            android:textColor="@color/app_red"
            android:textSize="@dimen/pub_text_13sp" />

        <TextView
            android:id="@+id/tv_product_numb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/pub_text_13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pub_dimen_4dp"
        android:layout_marginLeft="@dimen/pub_dimen_16dp"
        android:layout_marginRight="@dimen/pub_dimen_16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_product_account_discount_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/base_disable_text_color"
            android:textSize="@dimen/pub_text_14sp" />

        <TextView
            android:id="@+id/tv_product_account_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/app_orange"
            android:textSize="@dimen/pub_text_14sp" />

    </LinearLayout>

    <include layout="@layout/pub_line_hor" />

</LinearLayout>