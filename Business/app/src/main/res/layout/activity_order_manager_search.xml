<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/pub_app_bar" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/nva_filter_sub_text"
                    android:text="@string/order_search_start_time" />

                <TextView
                    android:id="@+id/tv_start_time"
                    style="@style/nva_filter_sub_text_content" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_marginRight="@dimen/pub_dimen_16dp" />


            </LinearLayout>

            <include layout="@layout/pub_line_hor" />

            <LinearLayout
                android:id="@+id/ll_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/nva_filter_sub_text"
                    android:text="@string/order_search_end_time" />

                <TextView
                    android:id="@+id/tv_end_time"
                    style="@style/nva_filter_sub_text_content" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_marginRight="@dimen/pub_dimen_16dp" />


            </LinearLayout>

            <include layout="@layout/pub_line_hor" />

            <LinearLayout
                android:id="@+id/ll_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/nva_filter_sub_text"
                    android:text="@string/order_type" />

                <TextView
                    android:id="@+id/tv_order_type"
                    style="@style/nva_filter_sub_text_content"
                    android:text="全部" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_marginRight="@dimen/pub_dimen_16dp" />


            </LinearLayout>

            <include layout="@layout/pub_line_hor" />

            <LinearLayout
                android:id="@+id/ll_order_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/nva_filter_sub_text"
                    android:text="@string/order_state" />

                <TextView
                    android:id="@+id/tv_order_state"
                    style="@style/nva_filter_sub_text_content"
                    android:text="全部" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_marginRight="@dimen/pub_dimen_16dp" />


            </LinearLayout>

            <include layout="@layout/pub_line_hor" />

            <Button
                android:id="@+id/btn_query"
                style="@style/button_default"
                android:layout_marginLeft="@dimen/pub_dimen_16dp"
                android:layout_marginTop="@dimen/pub_dimen_16dp"
                android:layout_marginRight="@dimen/pub_dimen_16dp"
                android:text="查询" />

        </LinearLayout>


    </FrameLayout>

</LinearLayout>
