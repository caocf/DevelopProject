<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@color/app_while"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/pub_dimen_16dp"
        android:gravity="center"
        android:text="@string/menu_filtrate"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/nva_filter_sub_text"
                    android:text="开始日期" />

                <TextView
                    android:id="@+id/tv_start_time"
                    style="@style/nva_filter_sub_text_content" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_marginRight="@dimen/pub_dimen_16dp" />


            </LinearLayout>

            <include layout="@layout/pub_line_hor" />

            <LinearLayout
                android:id="@+id/ll_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/nva_filter_sub_text"
                    android:text="结束日期" />

                <TextView
                    android:id="@+id/tv_end_time"
                    style="@style/nva_filter_sub_text_content" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_marginRight="@dimen/pub_dimen_16dp" />


            </LinearLayout>

            <include layout="@layout/pub_line_hor" />

            <LinearLayout
                android:id="@+id/ll_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/nva_filter_sub_text"
                    android:text="@string/order_type" />

                <TextView
                    android:id="@+id/tv_order_type"
                    style="@style/nva_filter_sub_text_content"
                    android:text="全部" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_marginRight="@dimen/pub_dimen_16dp" />


            </LinearLayout>

            <include layout="@layout/pub_line_hor" />

            <LinearLayout
                android:id="@+id/ll_order_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/nva_filter_sub_text"
                    android:text="@string/order_state" />

                <TextView
                    android:id="@+id/tv_order_state"
                    style="@style/nva_filter_sub_text_content"
                    android:text="全部" />

                <ImageView
                    style="@style/arrow_right"
                    android:layout_marginRight="@dimen/pub_dimen_16dp" />


            </LinearLayout>

            <include layout="@layout/pub_line_hor" />

            <Button
                android:id="@+id/btn_query"
                style="@style/nva_filter_sub_text"
                android:layout_width="match_parent"
                android:text="查询" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>