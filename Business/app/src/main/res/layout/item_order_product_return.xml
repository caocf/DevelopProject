<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_while"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_product_name"
        style="@style/style_order_head_text"
        android:layout_marginLeft="@dimen/pub_dimen_16dp"
        android:layout_marginRight="@dimen/pub_dimen_16dp"
        android:layout_marginTop="@dimen/pub_dimen_8dp"
        android:lines="1"
        android:text="@string/app_name"
        android:textSize="@dimen/pub_text_14sp" />

    <TextView
        android:id="@+id/tv_product_origin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_name"
        android:layout_marginLeft="@dimen/pub_dimen_16dp"
        android:layout_marginRight="@dimen/pub_dimen_16dp"
        android:layout_marginTop="@dimen/pub_dimen_8dp"
        android:textColor="@color/base_light_text_color"
        android:textSize="@dimen/pub_text_13sp" />

    <TextView
        android:id="@+id/tv_product_verify_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_origin_price"
        android:layout_marginBottom="@dimen/pub_dimen_8dp"
        android:layout_marginLeft="@dimen/pub_dimen_16dp"
        android:layout_marginRight="@dimen/pub_dimen_16dp"
        android:layout_marginTop="@dimen/pub_dimen_4dp"
        android:textColor="@color/base_light_text_color"
        android:textSize="@dimen/pub_text_13sp" />

    <TextView
        android:id="@+id/tv_product_numb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_product_verify_price"
        android:layout_alignBottom="@+id/tv_product_verify_price"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/pub_dimen_16dp"
        android:layout_marginRight="@dimen/pub_dimen_16dp"
        android:textColor="@color/base_light_text_color"
        android:textSize="@dimen/pub_text_13sp" />

    <View
        style="@style/line_hor"
        android:layout_alignParentBottom="true" />

</RelativeLayout>