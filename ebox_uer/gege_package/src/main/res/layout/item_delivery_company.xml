<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="60dp"
    android:padding="10dp">

    <com.moge.gege.util.widget.RoundedImageView
        android:id="@+id/deliveryImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        app:corner_radius="100dp" />

    <TextView
        android:id="@+id/deliveryNameText"
        style="@style/text_title_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/deliveryImage"
        android:singleLine="true" />

    <TextView
        android:id="@+id/deliveryTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/deliveryNameText"
        android:layout_below="@id/deliveryNameText"
        android:layout_marginTop="0dp"
        android:textColor="@color/text_999_color"
        android:textSize="@dimen/text_size_14" />

</RelativeLayout>