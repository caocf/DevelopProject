<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.moge.gege.util.widget.RoundedImageView
        android:id="@+id/deliveryImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        app:corner_radius="100dp" />

    <TextView
        android:id="@+id/courierNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/deliveryImage"
        android:singleLine="true"
        android:textColor="@color/text_444_color"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deliveryNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/courierNameText"
        android:layout_below="@id/courierNameText"
        android:layout_marginTop="0dp"
        android:textColor="@color/text_999_color"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/text_999_color"
        android:textSize="@dimen/text_size_15" />

    <!--android:drawableLeft="@drawable/icon_phone_blue"-->
    <!--android:drawablePadding="5dp"-->

</RelativeLayout>