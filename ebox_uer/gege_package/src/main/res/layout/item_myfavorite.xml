<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	
        <ImageView 
            android:id="@+id/markImage"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_alignParentLeft="true"
       		android:src="@drawable/icon_mark"/>
        
        <ImageView 
            android:id="@+id/haveImage"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_alignParentRight="true"
       		android:src="@drawable/icon_topic_image"/>
        
        <TextView 
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/haveImage"
            android:layout_toRightOf="@id/markImage"
            style="@style/text_topic_title"
            android:singleLine="true"/>
      
   </RelativeLayout>
   
   <com.moge.gege.util.widget.chat.EmoticonTextView 
       android:id="@+id/descText"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_marginTop="5dp"
	   style="@style/text_topic_content" />
   
   <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	
        <TextView 
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_alignParentRight="true"
            style="@style/text_topic_time"
            android:singleLine="true"/>
      
   </RelativeLayout>
   
</LinearLayout>