<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/life_group_bg_color">
    
    <include layout="@layout/general_header"/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        
    	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        
    	    <LinearLayout 
    	        android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_marginLeft="15dp"
	        	android:layout_marginTop="15dp"
    	        android:orientation="horizontal">
    	      	
    	        
    	        <LinearLayout
    	            android:id="@+id/sinaWeiboLayout"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:gravity="center_horizontal"
			        android:orientation="vertical">
			        
    	            <ImageView 
					    android:layout_width="60dp"
					    android:layout_height="60dp"
					    android:src="@drawable/icon_sina_normal"
					    android:scaleType="fitXY" />  
               
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:singleLine="true"
				        android:textColor="@color/service_text_color"
				        android:textSize="@dimen/text_size_11"
				        android:text="@string/sina_weibo"/>
			        
    	       </LinearLayout>
    	       
    	        <LinearLayout
    	            android:id="@+id/weixinLayout"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="20dp"
			        android:gravity="center_horizontal"
			        android:orientation="vertical">
			        
    	            <ImageView 
					    android:layout_width="60dp"
					    android:layout_height="60dp"
					    android:src="@drawable/icon_wechat_normal"
					    android:scaleType="fitXY" />  
               
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:singleLine="true"
				        android:textColor="@color/service_text_color"
				        android:textSize="@dimen/text_size_11"
				        android:text="@string/weixin"/>
			        
    	       </LinearLayout>
    	       
    	        
    	         <LinearLayout
    	            android:id="@+id/weixinCycleLayout"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="20dp"
			        android:gravity="center_horizontal"
			        android:orientation="vertical">
			        
    	            <ImageView 
					    android:layout_width="60dp"
					    android:layout_height="60dp"
					    android:src="@drawable/icon_moments_normal"
					    android:scaleType="fitXY" />  
               
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:singleLine="true"
				        android:textColor="@color/service_text_color"
				        android:textSize="@dimen/text_size_11"
				        android:text="@string/weixin_cycle"/>
			        
    	       </LinearLayout>
    	        
    	    </LinearLayout>
    
    	    <TextView
    	        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="30dp"
		        android:layout_gravity="center_horizontal"
		        android:text="@string/invite_info"
		        style="@style/text_topic_content"/>
    	    
    		<ImageView
    		    android:id="@+id/codeImage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:scaleType="fitXY"/>
  	
  		</LinearLayout>
  		
    </ScrollView>
        
</LinearLayout>