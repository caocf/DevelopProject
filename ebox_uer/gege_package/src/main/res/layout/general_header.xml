<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/generalHeaderLayout"
   	android:layout_width="fill_parent"
   	android:layout_height="48dp"
   	android:background="@color/head_bg_color">
   	
   	<TextView 
   		android:id="@+id/headerLeftText"
	   	android:layout_width="wrap_content" 
	   	android:layout_height="match_parent" 
	   	android:paddingLeft="10dp"
	   	android:paddingRight="10dp"
	   	android:layout_alignParentLeft="true"
    	android:layout_centerVertical="true"
    	android:drawablePadding="5dp"
    	android:gravity="center"
	   	android:clickable="true" 
	   	android:textSize="@dimen/text_size_16"
	   	android:textColor="@color/white"
	   	android:background="@drawable/bg_header_btn_color"/>
   	
   	<TextView 
   	    android:id="@+id/headerTitleText"
   		style="@style/head_title" 
   		android:text=""
    	android:layout_centerInParent="true"/>
   	
   	<TextView 
   	    android:id="@+id/headerRightText"
   	    android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:paddingLeft="10dp"
	   	android:paddingRight="10dp"
    	android:layout_alignParentRight="true"
    	android:background="@drawable/bg_header_btn_color"
    	android:gravity="center"
    	android:textSize="@dimen/text_size_16"
	    android:textColor="@color/white"
	    android:visibility="gone"/>
    
   	<LinearLayout 
   	    android:id="@+id/headerRightOptionLayout"
   	    android:layout_width="48dp"
    	android:layout_height="match_parent"
    	android:layout_toLeftOf="@id/headerRightText"
    	android:background="@drawable/bg_header_btn_color"
    	android:gravity="center"
    	android:clickable="true"
    	android:visibility="gone"
    	android:orientation="vertical" >
    
    	<ImageView 
	        android:id="@+id/headerRightOptionImage"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:scaleType="fitCenter"/>
   </LinearLayout>
    
</RelativeLayout>
