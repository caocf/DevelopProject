<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
      	   
   	   
    <com.moge.gege.util.widget.RoundedImageView 
       android:id="@+id/avatarImage"
   	   android:layout_width="45dp"
   	   android:layout_height="45dp"
   	   android:layout_marginTop="10dp"
   	   android:scaleType="fitXY"
   	   app:corner_radius="100dp"
   	   app:border_width="1dp"
   	   app:border_color="@color/item_gray"/>
    
    <LinearLayout
        android:id="@+id/nickNameLayout"
         android:layout_width="wrap_content"
         android:layout_height="20dp"
         android:layout_toRightOf="@id/avatarImage"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="15dp"
         android:gravity="center"
         android:orientation="horizontal">
                
         <TextView 
		   		android:id="@+id/nickanmeText"
		   		android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		style="@style/text_topic_title"
		   		android:singleLine="true"/>
                
         <ImageView 
    			android:id="@+id/genderImage"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_marginLeft="5dp"
    			android:layout_gravity="center"
    			android:visibility="gone"/>
		        
		<TextView
		        android:id="@+id/levelText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:textSize="@dimen/text_size_6"
		        android:textColor="@color/white"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:background="@drawable/bg_level"
		        android:visibility="gone"/>
		   
     </LinearLayout>
    
     
     <TextView 
         android:id="@+id/postTimeText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/avatarImage"
         android:layout_below="@id/nickNameLayout"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="2dp" 
         android:text="1分钟前"
         style="@style/text_topic_time"/>
             
     <Button 
	       android:id="@+id/registBtn"
	       android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_alignParentRight="true"
		   android:layout_marginTop="22dp"
		   android:background="@drawable/bg_joinboard"
		   android:text="@string/registration" 
		   android:textColor="@color/white"
		   android:textSize="@dimen/text_size_14"
		   android:textStyle="bold"
		   android:visibility="gone"/>
          
</RelativeLayout>
     
