<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <!-- 边框 -->
            <stroke android:width="2dp" android:color="@color/pub_blue" />

            <corners android:radius="5dp" />
            <!-- 背景 -->
            <solid android:color="@color/pub_trading_title_color" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>

            <!-- 边框 -->
            <stroke android:width="2dp" android:color="@color/pub_blue" />

            <corners android:radius="5dp" />
            <!-- 背景 -->
            <solid android:color="@color/pub_trading_title_color" />
        </shape>
    </item>
    <item>
        <shape>

            <!-- 边框 -->
            <stroke android:width="2dp" android:color="@color/pub_grey" />

            <corners android:radius="3dp" />
            <!-- 背景 -->
            <solid android:color="@color/pub_trading_title_color" />
        </shape>
    </item>
</selector>