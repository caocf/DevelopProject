<?xml version= "1.0" encoding= "utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"  android:state_checked="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/pub_red" />

            <corners android:radius="2dp" />
            <!-- 背景 -->
            <solid android:color="@color/pub_white"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="false" >
        <shape>

            <stroke android:width="2dp" android:color="@color/pub_grey" />

            <corners android:radius="2dp" />
            <!-- 背景 -->
            <solid android:color="@color/pub_white" />
        </shape>
    </item>
</selector>