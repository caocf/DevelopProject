<?xml version= "1.0" encoding= "utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <size android:width="600px" android:height="80px"></size>
            <corners android:radius="2dp"/>
            <!-- 背景 -->
            <solid android:color="@color/pub_btn_dis_enable"/>
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape>
            <size android:width="600px" android:height="80px"></size>
            <corners android:radius="2dp"/>
            <!-- 背景 -->
            <solid android:color="@color/pub_btn_grey_pressed"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <size android:width="600px" android:height="80px"></size>
            <corners android:radius="2dp"/>
            <!-- 背景 -->
            <solid android:color="@color/pub_btn_grey_pressed"/>
        </shape>
    </item>
    <item>
        <shape>
            <size android:width="200px" android:height="100px"></size>
            <corners android:radius="2dp"/>
            <!-- 背景 -->
            <solid android:color="@color/pub_btn_grey_normal"/>
        </shape>
    </item>

</selector>
