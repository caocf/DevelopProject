<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px"
    android:gravity="center"
    >

    <RadioGroup
        android:id="@+id/rg_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:text="摄像头"
            android:textColor="@color/pub_blue"
            android:textSize="@dimen/pub_text_size_26_px" />

        <RadioButton
            android:id="@+id/rb_ok_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="成功"
            android:textColor="@color/pub_blue"
            android:textSize="@dimen/pub_text_size_26_px" />


        <RadioButton
            android:id="@+id/rb_error_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="失败"
            android:textColor="@color/pub_blue"
            android:textSize="@dimen/pub_text_size_26_px" />

        <com.ebox.pub.ui.customview.view.MaterialButton
            android:id="@+id/mgt_bt_p_camera"
            style="@style/bt_fragment_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20px"
            android:layout_weight="2"
            android:text="摄像头测试 " />

    </RadioGroup>





</RelativeLayout>