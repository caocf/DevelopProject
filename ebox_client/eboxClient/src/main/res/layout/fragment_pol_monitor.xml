<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/rg_state_disk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="硬盘录像机:"
                android:textColor="@color/pub_blue"
                android:textSize="@dimen/pub_text_size_26_px" />


            <RadioButton
                android:id="@+id/rb_ok_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:text="正常"
                android:textColor="@color/pub_blue"
                android:textSize="@dimen/pub_text_size_26_px" />


            <RadioButton
                android:id="@+id/rb_no_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="异常"
                android:textColor="@color/pub_blue"
                android:textSize="@dimen/pub_text_size_26_px" />


        </RadioGroup>


        <RadioGroup
            android:id="@+id/rg_state_monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:text="监控摄像头:"
                android:textColor="@color/pub_blue"
                android:textSize="@dimen/pub_text_size_26_px" />

            <RadioButton
                android:id="@+id/rb_ok_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:text="正常"
                android:textColor="@color/pub_blue"
                android:textSize="@dimen/pub_text_size_26_px" />


            <RadioButton
                android:id="@+id/rb_no_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="异常"
                android:textColor="@color/pub_blue"
                android:textSize="@dimen/pub_text_size_26_px" />


        </RadioGroup>

    </LinearLayout>
</ScrollView>