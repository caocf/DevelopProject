<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ex_logo_height">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/ex_grey" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:background="@color/pub_transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:src="@drawable/ex_logo_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:layout_marginRight="18px"
            android:text="@string/ex_logo_phone_hint"
            android:textColor="@color/ex_black"
            android:textSize="@dimen/pub_text_size_24_px" />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:src="@drawable/ex_logo_phone" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="@string/ex_logo_phone"
            android:textColor="@color/ex_light_blue"
            android:textSize="@dimen/pub_text_size_24_px" />
    </LinearLayout>

</FrameLayout>