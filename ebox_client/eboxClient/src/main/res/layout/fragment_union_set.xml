<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20px"
            android:orientation="vertical"
            android:layout_marginTop="20px"
            android:layout_marginRight="100px">


            <TextView
                android:id="@+id/tv_box_seq_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:text="@string/mgt_jsums_ctrl"
                android:textColor="@color/pub_blue"
                android:textSize="@dimen/pub_text_size_26_px" />

            <EditText
                android:id="@+id/et_box_seq"
                style="@style/mgt_et_style"
                android:hint="0"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:text="@string/mgt_service_state"
                android:textColor="@color/pub_blue"
                android:textSize="@dimen/pub_text_size_26_px" />

            <EditText
                android:id="@+id/et_box_service"
                style="@style/mgt_et_style"
                android:hint="0"
                android:inputType="number"/>




            <com.ebox.pub.ui.customview.view.MaterialButton
                android:id="@+id/mgt_bt_fus_union"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="100px"
                android:layout_marginTop="50px"
                android:background="@drawable/ex_code_blue"
                android:padding="10px"
                android:text="银联配置"
                android:textColor="@color/pub_white"
                android:textSize="@dimen/pub_text_size_26_px" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>