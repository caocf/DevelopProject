<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/pub_top_nag_page">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_title_height"
        android:background="?attr/pub_title_background">

        <Button
            android:id="@+id/bt_back"
            style="?attr/pub_title_back"
            android:layout_width="300px"
            android:layout_height="132px"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_top"
            style="?attr/pub_title_tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/pub_huozhan" />

        <Button
            android:id="@+id/bt_quit"
            android:layout_width="300px"
            android:layout_height="132px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/pub_title_quit" />
    </RelativeLayout>

    <com.ebox.pub.ui.customview.ProgressWebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="outsideOverlay" />

</LinearLayout>
