<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl_st_member_bar">
    
    <RelativeLayout
        android:id="@+id/rl_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
	    <TextView android:id="@+id/tv_name"
            style="@style/pub_text_black_size_60_px"
            android:layout_width="212px"
            android:layout_height="212px"
            android:background="@color/pub_white"
            android:layout_marginTop="5px"
            android:gravity="center"/>
	    
	    <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="62px"
            android:layout_height="62px"
            android:background="@drawable/st_btn_delete"
            android:layout_marginLeft="150px"/>
    
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
	    
        <TextView android:id="@+id/tv_add"
            android:layout_width="212px"
            android:layout_height="212px"
            android:background="@drawable/st_btn_add"
            android:layout_marginTop="5px"/>
    </RelativeLayout>

</RelativeLayout>
