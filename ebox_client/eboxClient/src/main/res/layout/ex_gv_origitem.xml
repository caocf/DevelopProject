<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="212px" android:layout_height="90px"
    android:background="@color/pub_white">
    <TextView
        android:id="@+id/ex_tv_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/pub_black"
        android:textSize="30px"
        android:background="@color/ex_area_bg"
        android:layout_marginTop="@dimen/pub_text_size_34_px"/>

    <ImageView
        android:id="@+id/ex_iv_bg"
        android:layout_width="212px"
        android:layout_height="90px"
        android:visibility="invisible"
        android:src="@drawable/ex_area_small_bg"
        />
</RelativeLayout>