<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="@color/pub_btn_blue_normal">

        <View
            android:id="@+id/v_header"
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/pub_green"
            android:visibility="gone"></View>

        <TextView
            android:id="@+id/tv_fh_title"
            android:layout_below="@id/v_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/mgt_hide_title"
            android:textColor="@color/pub_white"
            android:textSize="@dimen/pub_text_size_30_px"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            />

        <TextView
            android:id="@+id/tv_fh_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/pub_text_size_22_px"
            android:layout_below="@id/tv_fh_title"
            android:layout_alignParentRight="true"
            android:textColor="@color/pub_white"
            android:layout_marginRight="40px"
            android:layout_marginTop="10px"
            android:text="@string/mgt_hide_des"/>
    </RelativeLayout>




</LinearLayout>