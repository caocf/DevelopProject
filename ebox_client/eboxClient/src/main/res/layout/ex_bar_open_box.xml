<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500px"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/ex_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/ex_grey" />

        <ImageView
            android:id="@+id/iv_door"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="20px"
            android:src="@drawable/ex_icon_open_box" />

        <TextView
            android:id="@+id/tv_door"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            android:text="箱门号"
            android:textColor="@color/ex_while"
            android:textSize="@dimen/pub_text_size_22_px" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/ex_grey" />

        <TextView
            android:id="@+id/tv_door_num"
            android:layout_width="308px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="箱门号"
            android:textStyle="bold"
            android:textColor="@color/ex_while"
            android:textSize="@dimen/pub_text_size_24_px" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/ex_grey" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/ex_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/ex_grey" />

        <ImageView
            android:id="@+id/iv_item_id"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="20px"
            android:src="@drawable/ex_input_item_id" />

        <TextView
            android:id="@+id/tv_item_id"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:textSize="@dimen/pub_text_size_22_px"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            android:text="运单号"
            android:textColor="@color/ex_while" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/ex_grey" />

        <TextView
            android:id="@+id/tv_item_id_num"
            android:layout_width="308px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="箱门号"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/ex_while"
            android:textSize="@dimen/pub_text_size_24_px" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/ex_grey" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/ex_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/ex_grey" />

        <ImageView
            android:id="@+id/iv_customer"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="20px"
            android:src="@drawable/ex_icon_customer" />

        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            android:textSize="@dimen/pub_text_size_22_px"
            android:text="收件人"
            android:textColor="@color/ex_while" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/ex_grey" />

        <TextView
            android:id="@+id/tv_customer_num"
            android:layout_width="308px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="箱门号"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_weight="1"
            android:textColor="@color/ex_while"
            android:textSize="@dimen/pub_text_size_24_px" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/ex_grey" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/ex_grey" />


</LinearLayout>
