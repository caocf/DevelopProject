<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="302px"
    android:orientation="vertical">

    <com.ebox.pub.ui.customview.RoundedImageView
        android:id="@+id/iv_work_win"
        android:layout_width="446px"
        android:layout_height="302px"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:corner_radius="6px" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/pub_text_white_size_42_px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/yc_grid_item_bg"
        android:gravity="center" />


</RelativeLayout>