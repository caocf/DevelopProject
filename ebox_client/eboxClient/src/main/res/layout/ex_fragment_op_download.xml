<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/pub_top_nag_page">

    <LinearLayout
        android:id="@+id/ex_ll_fod_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginTop="120px"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            style="@style/ex_text_normal"
            android:drawableLeft="@drawable/ex_download_role"
            android:drawablePadding="10px"
            android:text="@string/ex_download_tip1" />

        <TextView
            style="@style/ex_text_normal"
            android:drawableLeft="@drawable/ex_download_role"
            android:text="@string/ex_download_tip2"
            android:drawablePadding="10px"
            android:layout_marginLeft="@dimen/pub_text_size_20_px"/>

        <TextView
            style="@style/ex_text_normal"
            android:drawableLeft="@drawable/ex_download_role"
            android:text="@string/ex_download_tip3"
            android:drawablePadding="10px"
            android:layout_marginLeft="@dimen/pub_text_size_20_px"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ex_ll_fod_tip"
        android:gravity="center"
        android:layout_marginTop="100px">

        <!--Android-->
        <LinearLayout
            android:id="@+id/ex_ll_fod_android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ex_iv_fod_weixin"
                android:layout_width="180px"
                android:layout_height="180px" />

            <TextView
                style="@style/ex_text_normal"
                android:drawablePadding="10px"
                android:text="@string/ex_weixin"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110px"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/ex_iv_fod_app"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_below="@id/ex_ll_fod_tip"
        android:scaleType="fitXY"
        />
        <TextView
            style="@style/ex_text_normal"
            android:drawablePadding="10px"
            android:text="@string/ex_app"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
