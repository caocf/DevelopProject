<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ex_title_height"
    android:background="@color/ex_dark_blue">

    <FrameLayout
        android:layout_width="162px"
        android:id="@+id/fl_inner"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/bt_back"
            style="?attr/pub_title_back"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:src="@drawable/ex_back" />
    </FrameLayout>


    <Button
        android:id="@+id/ex_bt_home"
        android:layout_width="300px"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fl_inner"
        android:background="@drawable/pub_title_home"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="32px"
            android:layout_height="36px"
            android:src="@drawable/ex_icon_pickup" />

        <TextView
            android:id="@+id/tv_title"
            style="?attr/pub_title_tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/iv_title"
            android:gravity="center_vertical"
            android:text="@string/ex_box_state_close"
            android:textSize="34px"
            android:textStyle="normal" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="200px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28px"
            android:src="@drawable/ex_top_clock" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="26"
            android:textColor="@color/pub_white"
            android:textSize="34px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_timer"
            android:gravity="center"
            android:text="s"
            android:textColor="@color/pub_white"
            android:textSize="32px" />
    </RelativeLayout>


</RelativeLayout>
