<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:orientation="vertical">

    <com.moge.ebox.phone.ui.customview.Head
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/step1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_name"
                style="@style/style_register_input"
                android:hint="@string/name"
                android:inputType="text"
                android:padding="5dp"/>

            <View
                style="@style/style_home_line_ver"
                android:background="@color/base_bg_color" />

            <EditText
                android:id="@+id/et_id"
                style="@style/style_register_input"
                android:hint="@string/id_card"
                android:inputType="text"
                android:maxLength="18"
                android:padding="5dp"/>
        </LinearLayout>

        <View
            style="@style/style_home_line_ver"
            android:layout_height="4dp"
            android:background="@color/base_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/arrow_dowm" />

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/choose_kd_area"
                    android:paddingLeft="10dp"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/hint_gray"
                    android:textSize="@dimen/text_size_16" />

                <Spinner
                    android:id="@+id/spinner_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/translucent"
                    android:clickable="true"
                    android:gravity="center"
                    android:prompt="@string/choose_kd_area"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                style="@style/style_home_line_ver"
                android:background="@color/base_bg_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/arrow_dowm" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/choose_kd_company"
                    android:paddingLeft="10dp"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/hint_gray"
                    android:textSize="@dimen/text_size_16" />

                <Spinner
                    android:id="@+id/spinner_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/translucent"
                    android:clickable="true"
                    android:gravity="center"
                    android:prompt="@string/choose_kd_company"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                style="@style/style_home_line_ver"
                android:background="@color/base_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:background="@drawable/white"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_site_name"
                    style="@style/style_register_input"
                    android:hint="@string/site_name"
                    android:inputType="text"
                    android:padding="5dp"/>

                <View
                    style="@style/style_home_line_ver"
                    android:background="@color/base_bg_color" />

                <EditText
                    android:id="@+id/et_site_loc"
                    style="@style/style_register_input"
                    android:hint="@string/site_loc"
                    android:inputType="text"
                    android:maxLength="18"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/style_home_line_ver"
            android:layout_height="4dp"
            android:background="@color/base_bg_color" />


        <LinearLayout
            android:id="@+id/loginLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_next"
                style="@style/text_login_button"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_btn_login"
                android:gravity="center"
                android:text="@string/step_next"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/step2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:text="@string/photo_hint"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.moge.ebox.phone.ui.customview.RoundedImageView
                android:id="@+id/iv_head_icon"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/idcard_hint"
                app:border_color="@color/darkgray"
                app:border_width="2dp"
                app:corner_radius="10dp" />

            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_head_icon"
                android:layout_margin="2dp"
                android:background="@drawable/camera" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_tack_pic"
            style="@style/text_login_button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:text="@string/confim_tack_pic"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_register"
            style="@style/text_login_button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:text="@string/confim_register_pre"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>
